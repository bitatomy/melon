<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.bitatomy.melon">

    <uses-sdk android:minSdkVersion="15"
              android:maxSdkVersion="19"/>

    <application
            android:icon="@drawable/icon"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Holo">
        <activity android:name="com.bitatomy.melon.activity.MainActivity"
                  android:label="@string/mainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".activity.DisplayMessageActivity"
                  android:label="@string/displayMsgActivity"
                  android:parentActivityName="com.bitatomy.melon.activity.MainActivity">
        </activity>
    </application>
</manifest>
